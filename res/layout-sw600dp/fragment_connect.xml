<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:adjustViewBounds="true"
        android:divider="@drawable/separator_horizontal"
        android:dividerPadding="3dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:showDividers="middle" >

        <ToggleButton
            android:id="@+id/toggleConnectControlPoint"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:textColor="@drawable/list_selector_toggle"
            android:textOff="@string/connect"
            android:textOn="@string/disconnect"
             android:textSize="@dimen/text_size_compass"  />

        <Button
            android:id="@+id/button_handle"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:background="@drawable/button_selector_search_fragment"
            android:text="@string/handle_control"
            android:textColor="@drawable/button_text_selector"
           android:textSize="@dimen/text_size_compass" />

        <Button
            android:id="@+id/button_observer"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/button_selector_search_fragment"
            android:divider="@drawable/separator_horizontal"
            android:text="@string/mode_observer"
            android:textColor="@drawable/button_text_selector"
            android:textSize="@dimen/text_size_compass" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/vko" />
    </RelativeLayout>

</LinearLayout>