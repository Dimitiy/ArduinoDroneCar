<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

      <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:adjustViewBounds="true"
                android:divider="@drawable/separator"
                android:dividerPadding="3dp"
                android:orientation="horizontal"
                android:showDividers="middle" >

                <ToggleButton
                    android:id="@+id/toggleConnectControlPoint"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@drawable/list_selector_toggle"
                    android:textOff="@string/connect"
                    android:textOn="@string/disconnect"
                    android:textSize="25sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:adjustViewBounds="true"
                android:divider="@drawable/separator"
                android:dividerPadding="3dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:showDividers="middle" >

                <Button
                    android:id="@+id/button_handle"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_selector_search_fragment"
                    android:text="@string/handle_control"
                    android:textColor="@drawable/button_text_selector"
                    android:textSize="@dimen/text_size_compass" />

                <Button
                    android:id="@+id/button_observer"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_selector_search_fragment"
                    android:text="@string/mode_observer"
                    android:textColor="@drawable/button_text_selector"
                    android:textSize="@dimen/text_size_compass"/>

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_weight="1"
                    android:src="@drawable/vko" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical" >
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>